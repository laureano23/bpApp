{% extends 'baseWeb.html.twig' %}
  
{% block body %} 
  <section class="main container" id="contenedorProductos">
    <div class="row">

      <aside class="col-md-3 hidden-xs hidden-sm">
        <h4>Productos</h4>
        <ul class="list-group">
          {{ render(controller('MbpWebBundle:Default:listarCategoriasAside')) }}
        </ul>   
      </aside>

      <article class="post clearfix col-md-9">        
        <h2 class="post-title">
          <a href="#">
            {{ categorias.descripcion }}
          </a>
        </h2>
          <section class="col-md-9 productos-container">              
            {% for subCat in categorias.subCategoria %}             
              <h3>{{subCat.descripcion}}</h3>
              <div class="row">
              </div>
              {% for item in subCat.articulos %}                
                  <div class="row">                    
                      <div class="panel panel-default">
                        <div class="panel-heading">
                          <p class="post-contenido text-justify">
                            {{ item.descripcion }}
                            <a class="pull-right" target="_blank" href="{{ asset('bundles/mbpweb/pdf/catalogo/') }}{{ item.rutaHojaDatos }}">Hoja de datos <span class="glyphicon glyphicon-file"></span></a>
                          </p>                             
                        </div>
                      </div>                    
                  </div>                
              {% endfor %}           
            {% endfor %}
          </section>
      </article>
    </div>
  </section>
{% endblock %} 